<%= form_with(model: @task, local: true) do |form| %>
    <div class="task_title">
      <%= form.label :task_name %>
      <%= form.text_field :task_name %>
    </div>
    <div class="task_content">
      <%= form.label :task_content %>
      <%= form.text_field :task_content %>
    </div>
    <%= form.submit %>
<% end %>
