<h2>タスク詳細</h2>

<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">タイトル</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext"><%= @task.title %></div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">内容</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext"><%= @task.content %></div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">終了期限</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext"><%= @task.deadline %></div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">ステータス</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext">
        <% if @task.status == 1 %>
          未着手
        <% elsif @task.status == 2 %>
          着手中
        <% elsif @task.status == 3 %>
          完了
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">優先順位</label>
    <div class="col-sm-10">
      <div class="form-control-plaintext">
        <% if @task.priority == 1 %>
          高
        <% elsif @task.priority == 2 %>
          中
        <% elsif @task.priority == 3 %>
          低
        <% end %>
      </div>
    </div>
  </div>
</form>

<%= link_to "一覧へ", tasks_path %>
